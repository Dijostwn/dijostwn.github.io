<body>
    <div class="container">
        <h1>Aplikasi Stok Barang (Lokal) ðŸ’¾</h1>
        <p>Data disimpan di browser Anda (LocalStorage).</p>

        <h2>Tambah Barang Baru</h2>
        <form id="form-tambah">
            <input type="text" id="nama-barang" placeholder="Nama Barang" required>
            <input type="number" id="kuantitas" placeholder="Kuantitas" required min="1">
            <button type="submit">Tambah Stok</button>
        </form>

        <h2>Daftar Stok</h2>
        <table id="tabel-stok">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nama Barang</th>
                    <th>Kuantitas</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody id="data-stok">
                </tbody>
        </table>
    </div>

    <script>
        const STORAGE_KEY = 'inventory_app_stok';
        const formTambah = document.getElementById('form-tambah');
        const dataStokBody = document.getElementById('data-stok');

        // --- Fungsi Utama ---

        // 1. Ambil data dari LocalStorage
        function getStok() {
            const data = localStorage.getItem(STORAGE_KEY);
            return data ? JSON.parse(data) : [];
        }

        // 2. Simpan data ke LocalStorage
        function saveStok(stok) {
            localStorage.setItem(STORAGE_KEY, JSON.stringify(stok));
        }

        // 3. Render (Menampilkan) data ke tabel
        function renderStok() {
            const stok = getStok();
            dataStokBody.innerHTML = ''; // Kosongkan tabel
            
            if (stok.length === 0) {
                dataStokBody.innerHTML = '<tr><td colspan="4" style="text-align: center;">Belum ada barang dalam stok.</td></tr>';
                return;
            }

            stok.forEach(item => {
                const row = dataStokBody.insertRow();
                row.insertCell().textContent = item.id;
                row.insertCell().textContent = item.name;
                row.insertCell().textContent = item.quantity;
                
                const actionCell = row.insertCell();
                const deleteButton = document.createElement('button');
                deleteButton.textContent = 'Hapus';
                deleteButton.className = 'action-btn delete-btn';
                deleteButton.onclick = () => deleteItem(item.id);
                actionCell.appendChild(deleteButton);
            });
        }

        // 4. Tambah Item Baru
        formTambah.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const namaInput = document.getElementById('nama-barang');
            const kuantitasInput = document.getElementById('kuantitas');
            
            const name = namaInput.value.trim();
            const quantity = parseInt(kuantitasInput.value);

            if (name === "" || isNaN(quantity) || quantity <= 0) {
                alert("Nama dan Kuantitas harus diisi dengan benar.");
                return;
            }

            const stok = getStok();
            const newId = stok.length > 0 ? Math.max(...stok.map(i => i.id)) + 1 : 1;

            const newItem = { id: newId, name: name, quantity: quantity };
            stok.push(newItem);
            saveStok(stok);

            // Reset form
            namaInput.value = '';
            kuantitasInput.value = '';
            
            renderStok();
        });

        // 5. Hapus Item
        function deleteItem(id) {
            if (confirm("Apakah Anda yakin ingin menghapus barang ini?")) {
                let stok = getStok();
                stok = stok.filter(item => item.id !== id);
                saveStok(stok);
                renderStok();
            }
        }

        // --- Inisialisasi ---
        renderStok();
